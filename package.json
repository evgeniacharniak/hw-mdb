{
  "name": "imdb",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "start:hmr": "ng serve --hmr --port 4200",
    "build": "ng build",
    "analysis:bundle": "npm run build -- --stats-json && webpack-bundle-analyzer dist/IMDb/stats.json",
    "analysis:docs": "compodoc -p tsconfig.json -d reports/documentation",
    "eslint:check": "ng run IMDb:lint",
    "eslint:fix": "ng run IMDb:lint -- --fix",
    "htmlhint:check-rules": "htmlhint -c ./htmlhint/htmlhint.json",
    "htmlhint:check-custom-rules": "htmlhint -R ./htmlhint/rules/ -r custom-alt-require,custom-attribute-wrapping,custom-id-class-value=bem",
    "htmlhint:check": "npm run htmlhint:check-custom-rules -- src/app && npm run htmlhint:check-rules -- src/app",
    "stylelint:check": "stylelint src/**/**/*.scss",
    "pipeline:light": "htmlhint:check && stylelint:check && eslint:check && npm run build",
    "pipeline": "npm ci && npm run pipeline:light"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.4",
    "@angular/common": "~12.0.4",
    "@angular/compiler": "~12.0.4",
    "@angular/core": "~12.0.4",
    "@angular/forms": "~12.0.4",
    "@angular/platform-browser": "~12.0.4",
    "@angular/platform-browser-dynamic": "~12.0.4",
    "@angular/router": "~12.0.4",
    "@ng-stack/forms": "^2.4.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.4",
    "@angular-eslint/builder": "^12.2.2",
    "@angular-eslint/eslint-plugin": "^12.2.2",
    "@angular-eslint/eslint-plugin-template": "^12.2.2",
    "@angular-eslint/schematics": "^12.2.2",
    "@angular-eslint/template-parser": "^12.2.2",
    "@angular/cli": "~12.0.4",
    "@angular/compiler-cli": "~12.0.4",
    "@compodoc/compodoc": "^1.1.14",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jasmine": "^4.1.2",
    "eslint-plugin-jsdoc": "^35.4.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-rxjs": "^3.3.5",
    "eslint-plugin-unicorn": "^34.0.1",
    "htmlhint": "^0.15.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "typescript": "~4.2.3",
    "webpack-bundle-analyzer": "^4.4.2"
  }
}
